{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",

    // Build de produção simples e compatível com Node:
    "module": "CommonJS",
    "moduleResolution": "Node",

    // Override da flag que veio do tsconfig de DEV:
    "allowImportingTsExtensions": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts", "src/**/__tests__/**"]
}
